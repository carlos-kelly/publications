{
  "extends": ["formidable/configurations/es6-react", "prettier"],
  "rules": {
    "max-len": 0,
    "no-magic-numbers": 0,
    "react/prop-types": 0,
    "react/jsx-handler-names": 0,
    "arrow-parens": 0,
    "comma-dangle": [2, "always-multiline"],
    "react/no-multi-comp": 0,
    "no-invalid-this": 0,
    "no-shadow": 0,
    "no-use-before-define": 0,
    "new-cap": 0,
    "no-unused-vars": [
      2,
      { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": ["prettier"],
  "parser": "babel-eslint"
}
